{% assign sorted = result | sort: 'date' %}
{% assign now = 'now' | date: "%Y-%m-%d" %}

{% comment %}Build array of next collections for each waste type{% endcomment %}
{% assign upcoming_by_type = '' %}
{% assign types_seen = '' %}

{% for item in sorted %}
  {% if item.date >= now %}
    {% unless types_seen contains item.waste_type %}
      {% assign upcoming_by_type = upcoming_by_type | append: item.waste_type | append: '|' | append: item.date | append: ',' %}
      {% assign types_seen = types_seen | append: item.waste_type | append: ',' %}
    {% endunless %}
  {% endif %}
{% endfor %}

{% assign upcoming_by_type = upcoming_by_type | remove_last: ',' | split: ',' %}

<div class="layout layout--col gap--space-between">
  {% comment %}Next Collection - Big{% endcomment %}
  <div class="grid">
    <div class="item">
      {% assign found = false %}
      {% for item in sorted %}
        {% if item.date >= now and found == false %}
          <div class="content">
            <span class="label">Next Pickup</span>
            <span class="value value--xxxlarge value--tnums">{{ item.date | date: '%d.%m' }}</span>
            <span class="value value--xlarge">{{ item.waste_type | capitalize }}</span>
          </div>
          {% assign found = true %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="divider"></div>

  {% comment %}Upcoming Schedule - Timeline{% endcomment %}
  <div class="grid">
    <div class="item">
      <div class="content">
        <span class="label">Upcoming Schedule</span>
        <div class="grid grid--3col" style="margin-top: 0.5em;">
          {% assign count = 0 %}
          {% assign seen = '' %}
          {% for item in sorted %}
            {% if item.date >= now and count < 6 %}
              {% assign key = item.date | append: '-' | append: item.waste_type %}
              {% unless seen contains key %}
                <div class="item">
                  <div class="content">
                    <span class="value value--small value--tnums">{{ item.date | date: '%d.%m' }}</span>
                    <span class="label label--xsmall">{{ item.waste_type | capitalize }}</span>
                  </div>
                </div>
                {% assign seen = seen | append: key | append: ',' %}
                {% assign count = count | plus: 1 %}
              {% endunless %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg">
  <span class="title">Garbage Collection</span>
  <span class="instance">{{ 'now' | date: '%d.%m.%Y' }}</span>
</div>
